{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "./src"
  ]
}
